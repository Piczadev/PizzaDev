#!/bin/zsh
# @raycast.title Crear nota Obsidian
# @raycast.mode compact
# @raycast.icon ðŸ““
# @raycast.packageName Obsidian
# @raycast.argument1 { "type": "text", "placeholder": "TÃ­tulo de la nota" }

NOTE_DIR="$HOME/Library/Mobile Documents/iCloud~md~obsidian/Documents/Notas" # Ajusta si tu vault estÃ¡ en otro lugar
TITLE=$1
DATE=$(date '+%Y-%m-%d')
FILE="$NOTE_DIR/${DATE}_${TITLE// /_}.md"

echo "# $TITLE" > "$FILE"
echo "" >> "$FILE"
echo "_Creada el $DATE_" >> "$FILE"

open -a "Obsidian" "$FILE"
